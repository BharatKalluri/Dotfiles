export EDITOR=nvim

# Path to your oh-my-zsh installation.
export ZSH="$HOME/.oh-my-zsh"

# NVM Configuration
export NVM_DIR="$([ -z "${XDG_CONFIG_HOME-}" ] && printf %s "${HOME}/.nvm" || printf %s "${XDG_CONFIG_HOME}/nvm")"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh" # This loads nvm

# Generic Path additions
export PATH="$PATH:$HOME/.local/bin"
export PATH="$PATH:$HOME/.yarn/bin"

export LAMBDA_AWS_CREDS_FILE="$HOME/.aws/credentials"

export SSH_KEY_PATH="~/.ssh/rsa_id"

# Cargo
export PATH="$HOME/.cargo/bin:$PATH"
export PATH="$HOME/.local/bin:$PATH"

export SSH_KEY_PATH="~/.ssh/rsa_id"

export FZF_BASE="$HOME/.fzf"

# Anaconda
PATH="$HOME/miniconda3/bin:$PATH"
PATH="$HOME/anaconda3/bin:$PATH"

# Anaconda setup on mac
export PATH="$PATH:/usr/local/anaconda3/bin"

# Snapd
PATH="$PATH:/var/lib/snapd/snap/bin"

export FZF_DEFAULT_COMMAND='rg --files --no-ignore --hidden --follow --glob "!.git/*"'
export PATH="$PATH:$HOME/.fzf/bin"
export GOPATH=$HOME/go
export PATH="$PATH:$HOME/go/bin"

# Flutter
export PATH="$PATH:$HOME/Apps/flutter/bin"

# exports required for mac
export PATH="$PATH:/usr/local/bin"
export PATH="$PATH:/usr/bin"

# Zplug
export ZPLUG_HOME="$HOME/.zplug"

# Poetry
export PATH="$HOME/.poetry/bin:$PATH"

# Ruby
export PATH="$PATH:$HOME/.rvm/bin"

# Linux brew
export PATH="$PATH:/home/linuxbrew/.linuxbrew/bin"

# Spicetify-cli
export SPICETIFY_INSTALL="/home/bharatkalluri/Apps/spicetify-cli"
export PATH="$PATH:$SPICETIFY_INSTALL"

# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/usr/local/anaconda3/bin/conda' 'shell.bash' 'hook' 2>/dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/usr/local/anaconda3/etc/profile.d/conda.sh" ]; then
        . "/usr/local/anaconda3/etc/profile.d/conda.sh"
    else
        export PATH="/usr/local/anaconda3/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<
